# Development Environment Configuration
# User Behavior Analytics Platform
# Copy this file to .env.dev and update with your actual values

# =================================
# API Configuration
# =================================

# Google Gemini API配置
GOOGLE_API_KEY=your_google_api_key_here

# Volcano ARK API配置 (火山引擎豆包大模型)
ARK_API_KEY=your_ark_api_key_here
ARK_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
ARK_MODEL=doubao-seed-1-6-250615

# =================================
# LLM Provider Configuration
# =================================

# LLM提供商配置
DEFAULT_LLM_PROVIDER=volcano
ENABLED_PROVIDERS=["volcano", "google"]
ENABLE_FALLBACK=true
FALLBACK_ORDER=["volcano", "google"]

# LLM模型配置
LLM_MODEL=gemini-2.5-pro
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# =================================
# Multimodal Configuration
# =================================

# 多模态配置
ENABLE_MULTIMODAL=true
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=["jpg", "jpeg", "png", "gif", "webp"]
IMAGE_ANALYSIS_TIMEOUT=60

# =================================
# Application Configuration
# =================================

# 应用配置
APP_TITLE=用户行为分析智能体平台 (Development)
LOG_LEVEL=DEBUG
DEBUG_MODE=true

# =================================
# Streamlit Configuration
# =================================

# Streamlit服务器配置
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=100
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_RUN_ON_SAVE=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=auto

# =================================
# Development-Specific Settings
# =================================

# 开发环境特定配置
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_API_MOCKING=false
MOCK_API_RESPONSES=false

# 数据处理配置
ENABLE_DATA_VALIDATION=true
ENABLE_DETAILED_LOGGING=true
CACHE_ENABLED=false  # Disable caching for development

# 测试配置
ENABLE_TEST_MODE=false
TEST_DATA_PATH=/app/data/test
